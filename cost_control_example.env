# Cost Control Configuration
# Add this to your .env file to control spending

# Maximum OpenAI API calls per session (default: unlimited)
MAX_OPENAI_CALLS=100

# Skip OpenAI entirely (use only free methods)
DISABLE_OPENAI=true

# Confidence threshold for expensive calls (higher = fewer calls)
OPENAI_CONFIDENCE_THRESHOLD=0.3

# Daily spending limit in USD
DAILY_SPENDING_LIMIT=5.00